accessibleAutocomplete({
  element: container,
  id: '{{ inputId }}',
  name: '{{ config.name }}',
  source: items.map(item => item.displayText),
  showAllValues: true,  // Shows all values when focused
  autoselect: false,    // Do not automatically select the first option
  defaultValue: '',
  placeholder: '{{ placeholder }}',
  displayMenu: 'overlay', // Ensures the dropdown is an overlay
  onConfirm: (val) => {
    input.setAttribute('aria-expanded', 'false');
    console.log("Confirmed selection: ", val);
  },
  onOpen: () => {
    input.setAttribute('aria-expanded', 'true');
    console.log("Dropdown opened.");
  },
  onClose: () => {
    input.setAttribute('aria-expanded', 'false');
    console.log("Dropdown closed.");
  }
});
